generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                @id @unique
  username              String
  displayName           String?
  avatar                String?

  lastSeen              DateTime              @default(now())
  createdAt             DateTime              @default(now())
}