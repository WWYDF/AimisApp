{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "src",
    "paths": {
      "@plugins/*": ["plugins/*"],
      "@/*": ["*"]
    },
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
